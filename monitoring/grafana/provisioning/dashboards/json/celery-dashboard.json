{
  "dashboard": {
    "title": "OnQuota - Celery Metrics",
    "tags": ["onquota", "celery", "workers"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Task Rate (tasks/s)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(flower_task_succeeded_total[5m])",
            "legendFormat": "Succeeded",
            "refId": "A"
          },
          {
            "expr": "rate(flower_task_failed_total[5m])",
            "legendFormat": "Failed",
            "refId": "B"
          },
          {
            "expr": "rate(flower_task_received_total[5m])",
            "legendFormat": "Received",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Tasks/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Active Workers",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "flower_worker_online",
            "legendFormat": "{{worker}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Workers"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Queued Tasks",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "flower_task_queued",
            "legendFormat": "{{queue}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Tasks"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Task Duration (avg)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(flower_task_runtime_seconds_sum[5m]) / rate(flower_task_runtime_seconds_count[5m])",
            "legendFormat": "{{task_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Task Failure Rate (%)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "(rate(flower_task_failed_total[5m]) / rate(flower_task_total[5m])) * 100",
            "legendFormat": "Failure Rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Failure %"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Worker Memory Usage",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "flower_worker_memory_usage_bytes",
            "legendFormat": "{{worker}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Online Workers",
        "type": "stat",
        "gridPos": {"x": 0, "y": 24, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(flower_worker_online)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Tasks Queued",
        "type": "stat",
        "gridPos": {"x": 6, "y": 24, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(flower_task_queued)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Success Rate (%)",
        "type": "stat",
        "gridPos": {"x": 12, "y": 24, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "(1 - (rate(flower_task_failed_total[5m]) / rate(flower_task_total[5m]))) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 90, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Tasks Completed (24h)",
        "type": "stat",
        "gridPos": {"x": 18, "y": 24, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(flower_task_succeeded_total[24h]))",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "auto"
        }
      },
      {
        "id": 11,
        "title": "Tasks by Type",
        "type": "piechart",
        "gridPos": {"x": 0, "y": 28, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (task_name) (increase(flower_task_succeeded_total[1h]))",
            "refId": "A"
          }
        ]
      },
      {
        "id": 12,
        "title": "Slowest Tasks",
        "type": "table",
        "gridPos": {"x": 12, "y": 28, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "topk(10, avg by (task_name) (flower_task_runtime_seconds))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ]
      }
    ]
  }
}
