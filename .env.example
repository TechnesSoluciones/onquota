# OnQuota Environment Variables

# General
PROJECT_NAME=OnQuota
VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql+asyncpg://onquota_user:onquota_password@localhost:5432/onquota_db
DB_ECHO=False
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_DB=1

# Backend API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
API_DOCS_URL=/docs
API_REDOC_URL=/redoc

# CORS
# Note: Include both original and override ports for local development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000,http://localhost:8001
CORS_CREDENTIALS=True
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_HEADERS=*

# Security
SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_TRACK_STARTED=True
CELERY_TASK_TIME_LIMIT=300
CELERY_ACCEPT_CONTENT=json
CELERY_RESULT_SERIALIZER=json
CELERY_TASK_SERIALIZER=json
CELERY_TIMEZONE=UTC

# OCR Services
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_LANG=spa+eng
GOOGLE_VISION_API_KEY=your-google-vision-api-key
OCR_CONFIDENCE_THRESHOLD=0.85
MAX_IMAGE_SIZE_MB=10

# Geolocation Services (for Visit GPS tracking)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Storage (AWS S3 / MinIO)
STORAGE_TYPE=local  # local, s3, minio
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=onquota-uploads
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Email
EMAIL_PROVIDER=sendgrid  # sendgrid, ses
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@onquota.com
FROM_NAME=OnQuota

# AWS SES (alternative)
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY=your-ses-access-key
AWS_SES_SECRET_KEY=your-ses-secret-key

# Frontend
# Note: Use port 8001 when using docker-compose.override.yml for local development
NEXT_PUBLIC_API_URL=http://localhost:8001/api/v1
NEXT_PUBLIC_APP_NAME=OnQuota
NEXT_PUBLIC_APP_VERSION=1.0.0

# Monitoring (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text
